{
  "name": "Google hangout thread managments",
  "version": "1.0",
  "description": "By Baka Nobita",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "https://chat.google.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
   "matches": ["https://*/*"],
   "js": ["content_script.js"]
  }],
  "manifest_version": 2
}
